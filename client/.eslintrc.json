{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    // "quotes": ["error", "double", "backtick", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-alert": "error", // disallow the use of alert, confirm, and prompt
    "no-var": "warn", // require using let or const instead of var
    "prefer-const": "warn",
    "no-use-before-define": ["error", { "functions": false, "classes": true }], // disallow the use of variables before they are defined, except for functions
    "no-shadow": "warn", // disallow variable declarations from shadowing variables declared in the outer scope
    "camelcase": ["warn", { "properties": "never" }]
    // "react/no-unescaped-entities": "error"
  }
}
